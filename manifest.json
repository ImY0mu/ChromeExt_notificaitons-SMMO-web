{
  "name": "SimpleMMO - notifications",
  "author": "Y0mu",
  "version": "0.3",
  "version_name": "0.3 ALPHA",
  "manifest_version" : 2,
  "description": "SMMO browser extension developed by Y0mu. It is a chrome extension that adds notifications to SMMO web app.",
  "icons": {
    "128" : "img/simplemmo-swords.png",
    "48" : "img/simplemmo-swords.png",
    "16" : "img/simplemmo-swords.png"
  },
  "background": {
    "matches": ["https://web.simple-mmo.com/*"],
    "scripts" : [
      "js/jquery.min.js",
      "js/background.js"
    ],
    "persistent": true
  },  
  "browser_action": {
    "default_icon": "img/simplemmo-swords.png",
    "default_title": "SimpleMMO",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [],
  "permissions": [
    "notifications",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://websimple-mmo.com/*",
    "http://*/",
    "https://*/"
  ]
}
